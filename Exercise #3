  <!-- JavaScript for Filtering -->
  <script>
    function filterMembers(searchTerm) {
      const members = document.querySelectorAll("#memberList .member-card");
      searchTerm = searchTerm.toLowerCase();

      members.forEach(member => {
        const name = member.getAttribute("data-name").toLowerCase();
        if (name.includes(searchTerm)) {
          member.classList.remove("hidden-member");
        } else {
          member.classList.add("hidden-member");
        }
      });
    }

    // Get search term from URL on load
    window.addEventListener("DOMContentLoaded", () => {
      const urlParams = new URLSearchParams(window.location.search);
      const search = urlParams.get("search");
      const searchInput = document.getElementById("searchInput");

      if (search) {
        searchInput.value = search;
        filterMembers(search);
      }
    });
  </script>
